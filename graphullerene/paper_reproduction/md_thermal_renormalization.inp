&GLOBAL
  PROJECT C60_MD_thermal
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    
    &MGRID
      CUTOFF 600  ! Reduced for MD simulations
      REL_CUTOFF 50
    &END MGRID
    
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-8
    &END QS
    
    &SCF
      SCF_GUESS RESTART
      MAX_SCF 50
      EPS_SCF 1.0E-5
      
      &OT
        MINIMIZER CG
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
    &END SCF
    
    ! Use rVV10-b6.3 for MD (as stated in paper)
    &XC
      &XC_FUNCTIONAL
        &PBE
        &END PBE
      &END XC_FUNCTIONAL
      
      &vdW_POTENTIAL
        DISPERSION_FUNCTIONAL NON_LOCAL
        &NON_LOCAL
          TYPE RVV10
          PARAMETERS 6.3 0.0093  ! b=6.3 for MD simulations
          KERNEL_FILE_NAME rVV10_kernel_table.dat
          CUTOFF 400
        &END NON_LOCAL
      &END vdW_POTENTIAL
    &END XC
    
    &PRINT
      &MO
        EIGENVALUES
        &EACH
          MD 100  ! Print every 100 MD steps
        &END EACH
      &END MO
    &END PRINT
  &END DFT
  
  &SUBSYS
    &CELL
      ! Smaller supercell for MD: a=12.26 Ã… for vdW C60 (4 molecules)
      ABC 12.26 12.26 12.26
      PERIODIC XYZ
    &END CELL
    
    &TOPOLOGY
      COORD_FILE_NAME C60_1x1x1_4molecules.xyz
      COORD_FILE_FORMAT XYZ
    &END TOPOLOGY
    
    &KIND C
      BASIS_SET DZVP-MOLOPT-GTH-q4
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION
  &MD
    ENSEMBLE NVT
    TIMESTEP 1.0  ! 1 fs
    STEPS 7000    ! 2 ps equilibration + 5 ps production
    TEMPERATURE 300.0
    
    &THERMOSTAT
      TYPE NOSE
      &NOSE
        LENGTH 3
        YOSHIDA 3
        TIMECON 100.0
        MTS 2
      &END NOSE
    &END THERMOSTAT
    
    &PRINT
      &ENERGY
        &EACH
          MD 10
        &END EACH
      &END ENERGY
      
      &TRAJECTORY
        &EACH
          MD 50
        &END EACH
      &END TRAJECTORY
      
      &VELOCITIES
        &EACH
          MD 50
        &END EACH
      &END VELOCITIES
    &END PRINT
  &END MD
&END MOTION

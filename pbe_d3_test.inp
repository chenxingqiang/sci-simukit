&GLOBAL
  PROJECT pbe_d3_test
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    
    &MGRID
      CUTOFF 400
      REL_CUTOFF 50
    &END MGRID
    
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-10
    &END QS
    
    &SCF
      SCF_GUESS ATOMIC
      MAX_SCF 100
      EPS_SCF 1.0E-6
      IGNORE_CONVERGENCE_FAILURE
      
      &OT
        MINIMIZER CG
        PRECONDITIONER FULL_SINGLE_INVERSE
        ENERGY_GAP 0.1
      &END OT
    &END SCF
    
    ! PBE + D3修正 (Grimme的DFT-D3)
    &XC
      &XC_FUNCTIONAL
        &PBE
          SCALE_X 1.0
          SCALE_C 1.0
        &END PBE
      &END XC_FUNCTIONAL
      
      &vdW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL PBE
          R_CUTOFF 15.0
          VERBOSE_OUTPUT
        &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
    
    &PRINT
      &MO
        EIGENVALUES
        OCCUPATION_NUMBERS
        &EACH
          QS_SCF 0
        &END EACH
      &END MO
    &END PRINT
  &END DFT
  
  &SUBSYS
    &CELL
      ABC 12.0 12.0 12.0
      PERIODIC NONE
    &END CELL
    
    ! 使用C2分子测试vdW效应
    &COORD
C   0.000000   0.000000   0.000000
C   1.420000   0.000000   0.000000
    &END COORD
    
    &KIND C
      BASIS_SET DZVP-MOLOPT-GTH-q4
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PROJECT step2_bandgap_analysis
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    
    &MGRID
      CUTOFF 600
      REL_CUTOFF 60
    &END MGRID
    
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-12
    &END QS
    
    &SCF
      SCF_GUESS ATOMIC
      MAX_SCF 100
      EPS_SCF 1.0E-8
      IGNORE_CONVERGENCE_FAILURE
      
      &OT
        MINIMIZER CG
        PRECONDITIONER FULL_SINGLE_INVERSE
        ENERGY_GAP 0.01
      &END OT
    &END SCF
    
    &XC
      &XC_FUNCTIONAL
        &PBE
        &END PBE
      &END XC_FUNCTIONAL
    &END XC
    
    &PRINT
      ! 详细的分子轨道信息
      &MO
        EIGENVALUES .TRUE.
        EIGENVECTORS .FALSE.
        OCCUPATION_NUMBERS .TRUE.
        NDIGITS 8
        &EACH
          QS_SCF 0
        &END EACH
      &END MO
      
      ! 投影态密度
      &PDOS
        NLUMO 20
        NHOMO 20
        &EACH
          QS_SCF 0
        &END EACH
      &END PDOS
      
      ! 总态密度
      &DOS
        &EACH
          QS_SCF 0
        &END EACH
      &END DOS
      
      ! Mulliken电荷分析
      &MULLIKEN
        &EACH
          QS_SCF 0
        &END EACH
      &END MULLIKEN
      
      ! 电偶极矩
      &MOMENTS
        PERIODIC FALSE
        REFERENCE COAC
        &EACH
          QS_SCF 0
        &END EACH
      &END MOMENTS
    &END PRINT
  &END DFT
  
  &SUBSYS
    &CELL
      ABC 20.0 20.0 20.0
      PERIODIC NONE
    &END CELL
    
    ! 使用单个C60分子的优化坐标
    &COORD
C         0.00000        1.40000        0.00000
C         1.21244        0.70000        0.00000
C         1.21244       -0.70000        0.00000
C         0.00000       -1.40000        0.00000
C        -1.21244       -0.70000        0.00000
C        -1.21244        0.70000        0.00000
C         0.70000        0.00000        1.21244
C        -0.70000        0.00000        1.21244
C        -1.40000        0.00000        0.00000
C        -0.70000        0.00000       -1.21244
C         0.70000        0.00000       -1.21244
C         1.40000        0.00000        0.00000
C         0.00000        0.00000        1.40000
C         0.00000        0.00000       -1.40000
C         2.42488        1.40000        0.00000
C         3.63732        0.70000        0.00000
C         3.63732       -0.70000        0.00000
C         2.42488       -1.40000        0.00000
C         1.21244       -2.10000        0.00000
C        -1.21244       -2.10000        0.00000
    &END COORD
    
    &KIND C
      BASIS_SET DZVP-MOLOPT-GTH-q4
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

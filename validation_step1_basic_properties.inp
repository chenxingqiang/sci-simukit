&GLOBAL
  PROJECT validation_basic_properties
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    
    &MGRID
      CUTOFF 600  ! 提高精度用于严格验证
      REL_CUTOFF 60
    &END MGRID
    
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-12
    &END QS
    
    &SCF
      SCF_GUESS ATOMIC
      MAX_SCF 200
      EPS_SCF 1.0E-7  ! 更严格的收敛标准
      
      &OT
        MINIMIZER CG
        PRECONDITIONER FULL_SINGLE_INVERSE
        ENERGY_GAP 0.01
      &END OT
    &END SCF
    
    ! 使用基础PBE泛函建立基准
    &XC
      &XC_FUNCTIONAL
        &PBE
        &END PBE
      &END XC_FUNCTIONAL
    &END XC
    
    &PRINT
      &MO
        EIGENVALUES
        OCCUPATION_NUMBERS
        &EACH
          QS_SCF 0
        &END EACH
      &END MO
      
      &MULLIKEN
        &EACH
          QS_SCF 0
        &END EACH
      &END MULLIKEN
      
      ! 计算偶极矩用于后续介电常数计算
      &MOMENTS
        PERIODIC FALSE
        REFERENCE COAC
        &EACH
          QS_SCF 0
        &END EACH
      &END MOMENTS
    &END PRINT
  &END DFT
  
